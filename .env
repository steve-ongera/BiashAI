# BiashAI Environment Variables
# Development Configuration - Ready to Use

# ==================== DJANGO SETTINGS ====================
SECRET_KEY=django-insecure-dev-key-2024-biashai-change-in-production-!@#$%^&*()
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==================== DATABASE ====================
# SQLite (Development - No setup required)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# PostgreSQL (Recommended for Production)
# Uncomment and configure when ready:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=biashai_db
# DB_USER=biashai_user
# DB_PASSWORD=your-secure-password-here
# DB_HOST=localhost
# DB_PORT=5432

# MySQL (Alternative)
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=biashai_db
# DB_USER=biashai_user
# DB_PASSWORD=your-secure-password-here
# DB_HOST=localhost
# DB_PORT=3306

# ==================== M-PESA CONFIGURATION ====================
# Sandbox credentials (for testing)
# Get your own at https://developer.safaricom.co.ke
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=174379
MPESA_PASSKEY=
MPESA_CALLBACK_URL=http://localhost:8000/api/payments/mpesa/callback/
MPESA_TIMEOUT_URL=http://localhost:8000/api/payments/mpesa/timeout/

# ==================== AIRTEL MONEY CONFIGURATION ====================
AIRTEL_ENVIRONMENT=sandbox
AIRTEL_CLIENT_ID=
AIRTEL_CLIENT_SECRET=
AIRTEL_API_KEY=

# ==================== FACE RECOGNITION SETTINGS ====================
# Default settings optimized for accuracy
FACE_RECOGNITION_THRESHOLD=0.95
FACE_MAX_FAILED_ATTEMPTS=3
FACE_LOCK_DURATION=1800

# ==================== REDIS CONFIGURATION ====================
# Local Redis (install with: sudo apt install redis-server)
REDIS_URL=redis://localhost:6379/0

# ==================== AWS S3 (OPTIONAL) ====================
# Disabled by default - uses local file storage
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=biashai-media
AWS_S3_REGION_NAME=eu-west-1

# ==================== EMAIL CONFIGURATION ====================
# Console backend for development (emails printed to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@biashai.co.ke

# For Gmail in production, uncomment and configure:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-google-app-password

# ==================== SMS CONFIGURATION (AFRICA'S TALKING) ====================
# Sandbox mode for development
AT_USERNAME=sandbox
AT_API_KEY=

# ==================== CORS SETTINGS ====================
# Allow all origins in development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# ==================== SENTRY (ERROR TRACKING - PRODUCTION) ====================
# Leave empty for development
SENTRY_DSN=

# ==================== SOCIAL AUTH (OPTIONAL) ====================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ==================== PRODUCTION SETTINGS ====================
# When deploying to production, change these:
# DEBUG=False
# ALLOWED_HOSTS=biashai.co.ke,www.biashai.co.ke,api.biashai.co.ke
# SECRET_KEY=generate-a-new-strong-secret-key-using-django
# USE_S3=True (configure AWS credentials above)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# MPESA_ENVIRONMENT=production
# AIRTEL_ENVIRONMENT=production